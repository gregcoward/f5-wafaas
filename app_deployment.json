{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentName": {
      "type": "string",
      "metadata": {
        "description": "A unique name for this deployment."
      }
    },
    "f5Number": {
      "type": "int"
    },
    "f5Name": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "description": "User name to login to the Web Application Firewall."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password to login to the Web Application Firewall."
      }
    },
    "externalSubnetName": {
      "type": "string"
    },
    "vnetResourceGroupName": {
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "applicationProtocols": {
      "type": "string",
      "defaultValue": "http",
      "allowedValues": [ "http" ],
      "metadata": {
        "description": "The protocol(s) that will be used to configure the WAF VIPs."
      }
    },
    "applicationAddress": {
      "type": "string",
      "defaultValue": "NOT_SPECIFIED",
      "metadata": {
        "description": "The public IP address or DNS FQDN of the application that this WAF will protect."
      }
    },
    "applicationPort": {
      "type": "string",
      "defaultValue": "80",
      "metadata": {
        "description": "If deploying an HTTP application, the port on which your service listens for unencrypted traffic. This field is not required when deploying https only."
      }
    },
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "The name of the OMS Workspace to log too."
      }
    },
    "workspaceKey": {
      "type": "string",
      "metadata": {
        "description": "The key for the OMS Workspace."
      }
    },
    "applicationType": {
      "type": "string",
      "defaultValue": "Linux",
      "metadata": {
        "description": "Is your application running on a Linux OS or a Windows OS?"
      },     
      "allowedValues": [
        "Linux",
        "Windows"
      ]
    },
    "blockingLevel": {
      "type": "string",
      "defaultValue": "Medium",
      "metadata": {
        "description": "Please select how aggressive you would like the blocking level of this WAF to be.  Remember that the more aggressive the blocking level, the more potential there is for false-positives that the WAF might detect. Select Custom to specify your own security policy below."
      },    
      "allowedValues": [
        "Low",
        "Medium",
        "High",
        "Custom"
      ]
    },
    "customPolicy": {
      "type": "string",
      "defaultValue": "NOT_SPECIFIED",
      "metadata": {
        "description": "Specify the publicly available URL of a custom ASM security policy in XML format. This policy will be applied in place of the standard High/Medium/Low policy as indicated above."
      }
    }
  },
  "variables": {
    "externalNICNamePrefix": "[concat(parameters('f5Name'),'-externalnic')]", 
    "subnet-idExternal": "[concat(variables('vnetID'),'/subnets/',parameters('externalSubnetName'))]",
    "nsgID": "[resourceId('Microsoft.Network/networkSecurityGroups/',concat(parameters('f5Name'),'-externalnsg'))]",
    "loadBalancerName": "[concat(parameters('f5Name'),'-ALB')]",
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',variables('loadBalancerName'))]",
    "vnetID": "[resourceId(parameters('vnetResourceGroupName'),'Microsoft.Network/virtualNetworks',parameters('vnetName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-09-01",
      "tags": {
        "displayName": "External NIC"
      },
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('externalNICNamePrefix'), parameters('f5Number'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "networkSecurityGroup": {
          "id": "[variables('nsgID')]"
        },
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig0",
            "properties": {
              "primary": true,
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnet-idExternal')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('lbID'), '/backendAddressPools/', 'loadBalancerBackEnd')]"
                }
              ]          
            }
          },
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnet-idExternal')]"
              }        
            }
          },
          {
            "name": "ipconfig2",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnet-idExternal')]"
              }        
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('f5Name'),parameters('f5Number'),'/start')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "settings": {
          "fileUris": []},
        "protectedSettings": {
             "commandToExecute": "[concat('/bin/bash /config/deployment.sh ','-m ', parameters('applicationProtocols'), ' -d ', parameters('deploymentName'), ' -n ', parameters('applicationAddress'), ' -h ', parameters('applicationPort'), ' -s https', ' -t ', toLower(parameters('applicationType')), ' -l ', toLower(parameters('blockingLevel')), ' -a ', parameters('customPolicy'), ' -w ', parameters('workspaceName'), ' -k ', parameters('workspaceKey'), ' -u ', parameters('adminUsername'), ' -p ', parameters('adminPassword'), ' -v ', reference(resourceId('Microsoft.Network/networkInterfaces',concat(variables('externalNICNamePrefix'), parameters('f5Number')),'2016-09-01').ipConfigurations[1].properties.privateIPAddress))]"
        }
      }
     }
  ],
  "outputs": {
  }
}